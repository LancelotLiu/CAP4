<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.0.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">
    <bean id="placeholderConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="ignoreUnresolvablePlaceholders" value="false" />
        <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
        <property name="ignoreResourceNotFound" value="false" />
        <property name="locations">
            <list>
				<value>classpath:db/test_database.properties</value>
				<value>classpath:db/test_hibernate.properties</value>
				<value>classpath:test_config.properties</value>
            </list>
        </property>
    </bean>
    <!-- application -->
    <bean class="com.iisigroup.cap.utils.CapAppContext" />
    <!-- Syste config -->
    <bean id="systemConfig" class="com.iisigroup.cap.utils.CapSystemConfig">
        <constructor-arg index="0">
            <bean class="org.springframework.beans.factory.config.PropertiesFactoryBean">
                <property name="locations">
                    <list>
                        <value>classpath:config.properties</value>
                    </list>
                </property>
            </bean>
        </constructor-arg>
    </bean>
    <import resource="classpath:db/test_datasource.xml" />
    <import resource="classpath:db/test_jdbcTemplate.xml" />
    <import resource="classpath:db/test_jpa.xml" />
    <import resource="classpath:spring/test_component.xml" />
</beans>